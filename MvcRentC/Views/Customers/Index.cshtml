@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BirthDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Location)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.CostumerID }) |
            @Html.ActionLink("Details", "Details", new { id=item.CostumerID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.CostumerID })
        </td>
    </tr>
}

</table>
