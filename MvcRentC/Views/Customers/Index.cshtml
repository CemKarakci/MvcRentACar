@model IEnumerable<MvcRentC.Models.Customers>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<p>
    @Html.ActionLink("SortById", "SortById") |
    @Html.ActionLink("SortByName", "SortByName") |
    @Html.ActionLink("SortByBirthDay", "SortByBirthDay") |
    @Html.ActionLink("SortByLocation", "SortByLocation")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
