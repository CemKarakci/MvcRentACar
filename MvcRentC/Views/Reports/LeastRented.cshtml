    <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
    <script type="text/javascript">


        $(function () {
            $(function () {
                $("#StartDate").datepicker({
                    dateFormat: "mm/dd/yy",
                    changeMonth: true,
                    changeYear: true,

                });
                $("#EndDate").datepicker({
                    dateFormat: "mm/dd/yy",
                    changeMonth: true,
                    changeYear: true,

                });
            });
        });
    </script>
}

